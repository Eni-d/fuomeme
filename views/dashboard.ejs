<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito">
    <link rel="stylesheet" href="css/dashboard.css">
    <link href="https://unpkg.com/filepond@^4/dist/filepond.css" rel="stylesheet" />
    <link href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" rel="stylesheet" />
    <title>Dashboard</title>
    <style>
        body {
            font-family: Nunito;
        }
    </style>
</head>

<body>
    <div class="nav">
        <a href="/" class="text-light mr-5 ml-2 active-nav">Home</a>
    </div>
    <div class="overlay">
    </div>
    <div class="container main">
        <div class="row text-center">
            <div class="col-sm-6 ml-auto mr-auto">
                <div class="alert alert-info" role="alert" id="alert">Welcome <%= username %></div>
                <div class="alert alert-danger" role="alert" id="likeAlert" style="display: none;"><i class="la la-sad-cry ml-2 la-2x"></i><i class="la la-sad-cry ml-2 la-2x"></i><i class="la la-sad-cry ml-2 la-2x"></i></div>
                <% if (pic !== '') { %>
                    <div class="alert alert-success" role="alert" id="alertUpload">
                        Uploaded!
                    </div>
                <% } %>
                <!-- Button trigger modal -->
                <button type="button" class="btn text-dark mb-2" data-toggle="modal" data-target="#exampleModal" style="background-color: #fcf5f3; border-radius: 20px; border: none;">
                    Contest
                </button>
                
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Upload Picture</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p class="text-info">Image size should not exceed 2MB.</p>
                                <form action="/contest" method="POST">
                                    <!-- <div class="form-group">
                                        <input type="file" name="pic" id="pic" class="form-control">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Upload</button> -->
                                    <input type='file' name="pic" id="pic" class="filepond">
                                    <button type="submit" class="btn btn-primary">Upload</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% if (contestants.length > 0 ) { %>
                    <div class="container contestants">
                        <% for (let i=0; i < contestants.length; i++) { %>
                            <p style="display: none;"><%= contestants[i] %></p>
                            <div class="container card mb-4">
                                <img class="card-img-top w-100" src="<%= contestants[i].pic %>" alt="" id="contestantImage">
                                <div class="card-body">
                                    <h5 class="mb-4">
                                        <i class="la la-user-circle"></i>
                                        <p class="d-inline"><%= contestants[i].username %></p>
                                    </h5>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div>
                                                <i class="la la-heart la-2x" id="like"></i>
                                                <p class="text-danger d-inline">0</p>
                                                <p style="display: none;"><%=username%></p>
                                            </div>
                                        </div>
                                    </div>
                                    <form action="" id="commentForm">
                                        <div class="form-group">
                                            <input type="text" name="comment" id="comment" class="form-control d-inline w-75" placeholder="Add a comment...">
                                            <button class="btn btn-default text-info d-inline" type="submit" id="postBtn">Post</button>
                                        </div>
                                    </form>
                                    <button class="btn btn-default" id="viewComments">
                                        <i class="la la-angle-down"></i>
                                    </button>
                                    <p style="display: none;"><%= contestants[i].username %></p>
                                    <div id='comments' style="display: none; height: 35vh; overflow-y: scroll;">
                                    
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- <p style="background-color: aqua;">hrghjnb</p> -->

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js"></script>

    <script src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>

    <script src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>

    <script src="https://unpkg.com/filepond-plugin-file-validate-size/dist/filepond-plugin-file-validate-size.js"></script>

    <script src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>

    <script src="js/dashboard.js"></script>
</body>

</html>